<div>
	<h3>Users</h3>
	<table>
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>Firstname</th>
			<th>Lastname</th>
			<th>Email</th>
			<th colspan="3">Actions</th>
		</tr>
		<% _.each(users, function(user) { %>
		<tr data-id="<%= user.id %>" data-model="user">
			<td><%= user.id %></td>
			<td><%= user.username %></td>
			<td><%= user.firstname %></td>
			<td><%= user.lastname %></td>
			<td><%= user.email %></td>
			<td><a href="/user/show/<%= user.id %>">Afficher</a></td>
			<td><a href="/user/edit/<%= user.id %>">Modfier</a></td>
			<td>
				<form action="/user/delete/<%= user.id %>" methode="POST">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit" value="Supprimer"/>
					<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
				</form>
			</td>
		</tr>
		<% }) %>
	</table>
</div>